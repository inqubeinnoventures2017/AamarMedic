<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/product" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Product_price"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/_20sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="vertical"
                android:padding="@dimen/_15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Product_Details"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/_15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Product_Details_name"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textStyle="bold"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/_12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="@string/SKU_Code"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/_15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="@string/Product_Description"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/_15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:background="@drawable/shape_2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20dp"
            android:orientation="vertical" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Product_contains"
                android:background="@drawable/shape_3"
                android:textColor="@color/textColorBlack"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/Product_weight"
                android:textSize="@dimen/_15sp"
                android:textColor="@color/textColorBlack"
                android:textStyle="bold"
                android:background="@drawable/shape_3"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/Product_color"
                android:textSize="@dimen/_15sp"
                android:textColor="@color/textColorBlack"
                android:textStyle="bold"
                android:background="@drawable/shape_3"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/Product_brand"
                android:textSize="@dimen/_15sp"
                android:textColor="@color/textColorBlack"
                android:textStyle="bold"
                android:background="@drawable/shape_3"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/Product_material"
                android:textSize="@dimen/_15sp"
                android:textColor="@color/textColorBlack"
                android:textStyle="bold"
                android:background="@drawable/shape_3"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/Product_name"
                android:textSize="@dimen/_15sp"
                android:textColor="@color/textColorBlack"
                android:textStyle="bold"
                android:background="@drawable/shape_3"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/How_to_use"
                android:textSize="@dimen/_15sp"
                android:textColor="@color/textColorBlack"
                android:textStyle="bold"
                android:background="@drawable/shape_2"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@drawable/edt_style"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_prd_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/minus"
                    android:background="@drawable/grey_color"
                    android:textStyle="bold"
                    android:padding="@dimen/_15dp"
                    android:textSize="@dimen/_20sp" />

                <TextView
                    android:id="@+id/tv_wellness_item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:gravity="center"
                    android:textColor="@color/textColorBlack"
                    android:text="1"
                    android:textSize="@dimen/_20sp" />

                <TextView
                    android:id="@+id/tv_prd_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:drawableRight="@drawable/plus"
                    android:background="@drawable/grey_color"
                    android:textStyle="bold"
                    android:padding="@dimen/_15dp"
                    android:textSize="@dimen/_20sp" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/buy_now"
            android:text="@string/Buy_Now"
            android:textAllCaps="false"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/_15sp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/addtocart"
            android:text="@string/Add_to_Cart"
            android:textAllCaps="false"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/_15sp"
            android:layout_marginTop="@dimen/_15dp" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>